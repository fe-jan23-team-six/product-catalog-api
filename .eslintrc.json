{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "@mate-academy/eslint-config",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "no-shadow": [
        "error",
        {
          "builtinGlobals": false,
          "hoist": "functions",
          "allow": [],
          "ignoreOnInitialization": false
        }
      ]
    }
}
